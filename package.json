{
  "name": "nocomment",
  "displayName": "NoComment",
  "description": "Remove comments from JS/TS files using AST parsing",
  "version": "1.0.2",
  "publisher": "markwylde",
  "icon": "logo.png",
  "author": {
    "name": "Mark Wylde",
    "email": "mark@wylde.net",
    "url": "https://markwylde.com"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:nocomment.removeComments"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nocomment.removeComments",
        "title": "NoComment: Remove Comments from Current File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:package": "vsce package",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile -- --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/typescript-estree": "^8.31.1",
    "esbuild": "^0.25.3",
    "glob": "^11.0.2",
    "minimatch": "^10.0.1",
    "mocha": "^11.2.2",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/markwylde/nocomment.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
